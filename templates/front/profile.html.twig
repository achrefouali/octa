                                                                    <div class="form-group">
                                                                        {{ form_label(form.country, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.country, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.country) }}
                                                                        </div>
