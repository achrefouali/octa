{% block title %}FANAF 2019: Administration{% endblock %}

 {% block stylesheets %}
     <link href="{{ asset('assets/back/css/bootstrap-timepicker.min.css') }}"  rel="stylesheet" />
     <link href="{{ asset('assets/back/css/jquery.datatables.css') }}" rel="stylesheet">
     <link href="{{ asset('assets/back/css/style.default.css') }}" rel="stylesheet">



     <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
     <!--[if lt IE 9]>
     <script src="{{ asset('assets/back/js/html5shiv.js') }}"></script>
     <script src="{{ asset('assets/back/js/respond.min.js') }}"></script>
     <![endif]-->
 {% endblock %}

 {% block javascripts %}



     <script src="{{ asset('assets/back/js/jquery-1.11.1.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/jquery-migrate-1.2.1.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/bootstrap.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/modernizr.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/jquery.sparkline.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/jquery.cookies.js') }}"></script>

     <script src="{{ asset('assets/back/js/toggles.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/retina.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/jquery.datatables.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/select2.min.js') }}"></script>


     <script src="{{ asset('assets/back/js/custom.js') }}"></script>
     <script src="{{ asset('assets/back/js/bootstrap-datetimepicker.min.js') }}"></script>
     <script src="{{ asset('assets/back/js/ckeditor/ckeditor.js') }}"></script>
     <script src="{{ asset('assets/back/js/ckeditor/adapters/jquery.js') }}"></script>

         <script>
             jQuery(document).ready(function(){
                 // CKEditor
                 jQuery('.ckeditor').ckeditor();
                 jQuery('.datetimepicker').datetimepicker();

             });

             CKEDITOR.dtd.$editable.input = 1
         </script>



 {% endblock %}

  {% block body %}

      <!-- Preloader -->
      <div id="preloader">
          <div id="status"><i class="fa fa-spinner fa-spin"></i></div>
      </div>

      <section>

          {% include 'back/menu.html.twig' %}

          <div class="mainpanel">

              <div class="headerbar">

                  <a class="menutoggle"><i class="fa fa-bars"></i></a>

                  <form class="searchform" action="#" method="post">
                      <input type="text" class="form-control" name="keyword" placeholder="Recherchez ici..." />
                  </form>

                  <div class="header-right">
                      <ul class="headermenu">
                          <li>
                              <div class="btn-group">
                                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                      <img src="{{ asset('assets/back/images/photos/loggeduser.png') }}" alt="{{ app.user.firstname }} {{ app.user.lastname }}" />
                                      {{ app.user.firstname }} {{ app.user.lastname }}
                                      <span class="caret"></span>
                                  </button>
                                  <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                                      <li><a href="{{ path('back_participant_show', {id: app.user.id}) }}"><i class="glyphicon glyphicon-user"></i> Mon Profile</a></li>
                                      <li><a href="{{ path('logout') }}"><i class="glyphicon glyphicon-log-out"></i> Déconnexion</a></li>
                                  </ul>
                              </div>
                          </li>
                      </ul>
                  </div><!-- header-right -->

              </div><!-- headerbar -->

              <div class="pageheader">
                  <h2><i class="fa fa-home"></i> Tableau de bord <span>{% block subtitle %}Subtitle goes here...{% endblock %}</span></h2>
                  <div class="breadcrumb-wrapper">
                      <span class="label">Vous êtes ici:</span>
                      <ol class="breadcrumb">
                          <li><a href="#">FANAF 2019</a></li>
                          <li class="active">Tableau de bord</li>
                      </ol>
                  </div>
              </div>

              <div class="contentpanel">
                  {% for label, messages in app.flashes %}
                      {% for message in messages %}
                          <div class="alert alert-{{ label }}">
                              {{ message }}
                          </div>
                      {% endfor %}
                  {% endfor %}
                  {% block content %}
                     <h1>Bienvenue!</h1>
                  {% endblock %}
              </div><!-- contentpanel -->

          </div><!-- mainpanel -->

      </section>
  {% endblock %}