{% extends 'back/layout.html.twig' %}
{% block title %}{{ parent() }}| Gestion Participants{% endblock %}
    {% block subtitle %} Liste Participants {% endblock %}
{% block content %}

    <a href="{{ path('back_participant_new') }}" class="btn btn-success">+ Ajouter</a><br />
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-primary mb30">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Nom</th>
                        <th>Identifiant</th>
                        <th>Email</th>
                        <th>Type</th>
                        <th>Actif</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for participant in participants %}
                        <tr>
                            <td>{{ participant.id }}</td>
                            <td>
                                {% if participant.picture is not empty %}
                                    <img width="100"
                                         src="{{ asset('uploads/intervenants/' ~ participant.picture) }}">
                                {% else %}
                                    <img width="100"
                                         src="{{ asset('assets/front/img/no-image.png') }}">
                                {% endif %}
                            </td>
                            <td>{{ participant.firstname }} {{ participant.lastname }}</td>
                            <td>{{ participant.username }}</td>
                            <td>{{ participant.email }}</td>
                            <td>{{ participant.type }}</td>
                            <td>{{ participant.enabled ? 'Oui' : 'Non' }}</td>
                            <td>
                                <a href="{{ path('back_participant_show', {'id': participant.id}) }}"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('back_participant_edit', {'id': participant.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
