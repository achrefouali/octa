                        {#</div>#}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Banner END-->


    <!--NEWS-->
    <section>
        <div id="csi-news" class="csi-news csi-news-singlepage">
            <div class="csi-inner">
                <div class="container-about">
                    <div class="row">
                        <div class="col-sm-10">
                            <h4>Bienvenue
                                <small>{{ app.user.firstname }} {{ app.user.lastname }}</small>
                                ,
                            </h4>
                        </div>
                        <div class="col-sm-2"><a href="/users" class="pull-right"><img title="profile image"
                                                                                       class="img-circle img-responsive"
                                                                                       src="http://www.gravatar.com/avatar/28fd20ccec6865e2d5f0e1f4446eb7bf?s=100"></a>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-12">
                            <ul class="nav nav-tabs">
                                <li class="active" style="font-size: 16px !important;"><a data-toggle="tab" href="#profile">{{ 'My Profile'|trans }}</a></li>
                                <li style="font-size: 16px !important;"><a data-toggle="tab" href="#reservation">{{ 'Invoice'|trans }}</a></li>
                            </ul>


                            <div class="tab-content">
                                <div class="tab-pane active" id="profile">
                                    <hr>
                                    <div style="margin-bottom: 20px">
                                        <div class="container-about">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="card" style="border: 1px solid #9a1f80 !important;">
                                                        <div class="card-header">
                                                            <div class="row mb-4">

                                                            </div>
                                                        </div>
                                                        <div class="card-body profile-form" style="margin-top: 2%;">
                                                            {{ form_start(form, {"attr": {"id": "my-id-here", "class": "form-horizontal form-bordered", 'action': path('front_profile') , 'method': 'POST'}}) }}
                                                            <div class="row mb-4">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.firstname, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.firstname, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.firstname) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.lastname, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.lastname, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.lastname) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-4">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.societe, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.societe, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.societe) }}
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.poste, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.poste, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.poste) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-4">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.telephone, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.telephone, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.telephone) }}
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.telephone2, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.telephone2, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.telephone2) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-4">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.biographie, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.biographie, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.biographie) }}
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.tweeterLink, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.tweeterLink, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.tweeterLink) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-4">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.linkedinLink, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.linkedinLink, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.linkedinLink) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.nationalite, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.nationalite, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.nationalite) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="row mb-4">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.address, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.address, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.address) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.codePostal, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.codePostal, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.codePostal) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="row mb-4">
