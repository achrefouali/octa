{% extends 'front/layout.html.twig' %}
{% trans_default_domain 'front' %}
{% block title %}Page | {{ parent() }}{% endblock %}
{% block body_attr %}class="single single-post"{% endblock %}



{% block main %}
    <!--Banner-->
    <section>
        <div class="csi-banner csi-banner-inner">
            <div class="csi-banner-style">
                <div class="csi-inner">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="csi-heading-area">
                                    <ul class="breadcrumb">
                                        <li><a href="{{ path('home') }}"><i class="icon-home6"></i>{{ 'Home'|trans }}</a></li>
                                        <li class="active">{{ 'Registration'|trans }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div><!--//.ROW-->
                    </div>
                </div>
                <!-- //.INNER -->
            </div>
        </div>
    </section>
    <!--Banner END-->
<section>
    <div class="container">
        <h3>Connexion</h3>

    </div>

        <div class="container">
        <div class="well">


                <form action="{{ path('front_login') }}" method="post">
                    {% if error %}
                        <p class="mt5 mb20">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    {% endif %}
                    <fieldset>
                        <div class="form-group">
                            <label for="username">{{ 'Username'|trans }}</label>
                            <input type="text" id="username" name="_username" value="" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'Password'|trans }}</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'Go In'|trans }}
                        </button>
                        <a href="{{ path('inscription_page') }}" > {{ 'Register'|trans }}</a>
                    </fieldset>
                </form>
            </div>
        </div>

</section>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}


{% endblock %}