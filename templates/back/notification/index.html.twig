{% extends 'back/layout.html.twig' %}
{% block title %}{{ parent() }}| Gestion Notifications{% endblock %}
    {% block subtitle %} Liste Notifications {% endblock %}
{% block content %}

    <a href="{{ path('back_notification_new') }}" class="btn btn-success">+ Ajouter</a><br />
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-primary mb30">
                    <thead>
                    <tr>
                        <th>NotificationType</th>
                        <th>Subject</th>
                        <th>Id</th>
                        <th>Actif</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for notification in notifications %}
                        <tr>
                            <td>{{ notification.notificationType }}</td>
                            <td>{{ notification.subject }}</td>
                            <td>{{ notification.id }}</td>
                            <td>{{ notification.enabled ? 'Oui' : 'Non' }}</td>
                            <td>
                                <a href="{{ path('back_notification_show', {'id': notification.id}) }}"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('back_notification_edit', {'id': notification.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        jQuery(document).ready(function() {

            "use strict";

            jQuery('.table').dataTable();
        });


        // Select2
        jQuery('select').select2({
            minimumResultsForSearch: -1
        });

        jQuery('select').removeClass('form-control');
    </script>
{% endblock %}