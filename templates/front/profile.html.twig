                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.pays, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.pays, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.pays) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="row mb-4">
                                                                <div class="col-md-4">
                                                                    <div class="informations">
                                                                        <h3>{{ 'Connection information'|trans }}</h3>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-4">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.email, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.email, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.email) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.password.first, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.password.first, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.password.first) }}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <div class="form-group">
                                                                        {{ form_label(form.password.second, null ,  {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                                                                        <div class="col-sm-8">
                                                                            {{ form_widget(form.password.second, {'attr': {'class': "form-control"}}) }}
                                                                            {{ form_errors(form.password.second) }}
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                            <div class="row">
                                                                <div class="panel-footer" style="text-align: center; background-color: transparent !important;">
                                                                    <div class="row">
                                                                        <div class="col-sm-6 col-sm-offset-3">
                                                                            <button id="submit-button"
                                                                                    class="btn btn-primary">
                                                                                {{ 'Send'|trans }}
                                                                            </button>&nbsp;
                                                                        </div>
                                                                    </div>
                                                                </div><!-- panel-footer -->
                                                            </div>
                                                            {{ form_rest(form) }}

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <hr>
                                <div class="tab-pane" id="reservation">
                                  {% include 'front/profile/event.reservation.sheet.html.twig' %}
                                </div>

                            </div><!--/tab-pane-->
                        </div><!--/tab-content-->


                    </div><!--/col-9-->
                </div><!-- //.CONTAINER -->
            </div><!-- //.INNER -->
        </div>
    </section> <!--//.NEWS-->

